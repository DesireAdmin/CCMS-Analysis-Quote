@using Microsoft.AspNetCore.Http.Features

@{
    var consentFeature = Context.Features.Get<ITrackingConsentFeature>();
    var showBanner = !consentFeature?.CanTrack ?? false;
    var cookieString = consentFeature?.CreateConsentCookie();
}

@if (showBanner)
{
    <div id="cookieConsent" class="bg-blue-50 dark:bg-blue-900 p-4 flex justify-between" role="alert">
        <p>
            We use cookies and similar technologies to enhance your experience, analyze site performance, and maintain secure authentication. By continuing to use this app, you agree to our Privacy and Cookie Policy. To proceed, you must accept these terms.
            @* Use this space to summarize your privacy and cookie use policy
            (Authentication requires Users to accept). *@
            <a class="@Css.Link" href="/docs/privacy">Learn More</a>.
        </p>
        <button type="button" class="text-blue-700 dark:text-blue-200 font-semibold">
            Accept
        </button>
    </div>
    <script>
    document.querySelector("#cookieConsent button")
        .addEventListener("click", e => {
            document.cookie = "@cookieString"
            e.target.parentElement.remove()
        }, false)
    </script>
}